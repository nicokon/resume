{
  "name": "musicplayer",
  "version": "0.0.1",

  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "builder": "electron-builder --win --x64"
  },
  "build": {
    "productName": "simplemusicplayer",
    "appId": "com.nckn.musicplayer",
    "copyright": "nicokon",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "./icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "9.1.0",
    "electron-builder": "^21.2.0"
  }
}
